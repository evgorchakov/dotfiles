# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ß
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        color_good = "#a6e22e"
        color_bad = "#CC1616"
        color_degraded = "#55858E"
        interval = 2

}

order += "tztime local"
order += "wireless wlp3s0"
order += "disk /"
order += "disk /home"
order += "ethernet enp0s25"

order += "battery 0"
order += "battery 1"
order += "volume master"

wireless wlp3s0 { 
        format_up = "%essid %quality"
        format_down = ""
        separator = false
        separator_block_width = 40
}

battery 0 {
        integer_battery_capacity = true
        format = "%percentage %status (%consumption)"
        threshold_type = percentage
        low_threshold = 20
        status_chr = "[⚡]"
        status_bat = ""
        status_full = ""
        status_unk = ""
        separator = false
        separator_block_width = 20
}

battery 1 {
        integer_battery_capacity = true
        format = "%percentage %status (%consumption)"
        threshold_type = percentage
        low_threshold = 20
        status_chr = "[⚡]"
        status_bat = ""
        status_full = ""
        status_unk = ""
        separator = false
        separator = false
        separator_block_width = 40
}

ethernet enp0s25 {
 # if you use %speed, i3status requires the cap_net_admin capability
 format_up = "E: %ip (%speed)"
 format_down = ""
}


tztime local {
        #format = "  %Y-%m-%d   %A     %H:%M    "
        format = "%H:%M   %a   %B %d"
        separator = false
        separator_block_width = 150
}

disk "/" {
        prefix_type = "custom"
        format = "/ %avail"
        separator = false
        separator_block_width = 10
}

disk "/home" {
        prefix_type = "custom"
        format = "/home %avail"
        separator = false
        separator_block_width = 40
}

volume master {
        format = "VOL %volume " 
        format_muted = "VOL MUTED " 
        device = "default"
        mixer = "Master"
        mixer_idx = 0
        separator = false
        separator_block_width = 0
}
